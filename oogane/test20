.img1, .img2, .img3, .img4 {
    width: calc(100% / 4); /* 4等分します */
    height: 400px;
    margin: auto;
    background-color: pink;
    display: inline-block;
}

.img5, .img6, .img7 {
    width: calc(100% / 3); /* 3等分します */
    height: 400px;
    /*margin: auto;　FLEXBOXを追加したので、なしでOK　*/
    background-color: pink;
    display: inline-block;
}

